<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/root_analyse_item"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/performance_pie"
        android:layout_width="wrap_content"
        android:layout_margin="16dp"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/analyse_card_title"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_toEndOf="@+id/performance_pie"
        android:layout_width="match_parent"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@+id/performance_change"
        android:text="Early Game"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/performance_change"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        android:textColor="@color/green"
        android:text="+6.3%"
        android:layout_alignParentEnd="true"
        android:padding="16dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</RelativeLayout>