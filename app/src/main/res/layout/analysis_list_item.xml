<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/list_item_wrapper"
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/header_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_title"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:text="Creep Score"
            android:layout_marginBottom="4dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/list_item_subtitle"
            android:text="Early Game"
            android:textSize="12sp"
            android:layout_below="@+id/item_title"
            android:layout_marginLeft="24dp"
            android:textColor="@color/white"
            android:layout_marginBottom="24dp"
            android:alpha="0.6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/trend"
            android:tint="@color/green"
            android:src="@mipmap/ic_trending_up_white_24dp"
            android:layout_toLeftOf="@+id/total_change"
            android:layout_alignTop="@+id/total_change"
            android:layout_alignBottom="@+id/total_change"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/total_change"
            android:textSize="12sp"
            android:alpha="0.6"
            android:text="65.3"
            android:textColor="@color/white"
            android:layout_toLeftOf="@+id/expand_collapse_button"

            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/expand_collapse_button"
            android:src="@mipmap/ic_expand_more_white_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/graph_wrapper"
        android:layout_marginTop="22dp"
        android:background="@color/colorPrimaryDark"
        android:visibility="gone"
        android:layout_below="@id/header_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/seperator"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:alpha="0.6"
        android:layout_height="1px"/>
</RelativeLayout>