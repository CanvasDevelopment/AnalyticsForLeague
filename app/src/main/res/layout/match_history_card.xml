<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="12dp"
    android:background="@color/white"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/chart_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/midGrey">

            <android.support.v4.widget.CircleImageView
                android:id="@+id/good_or_bad_state_icon"

                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/jg" />

            <TextView
                android:id="@+id/graph_title"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignTop="@+id/good_or_bad_state_icon"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/good_or_bad_state_icon"
                android:gravity="center"
                android:text="Master Yi"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/kda"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/good_or_bad_state_icon"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:text="9/6/5"
                android:textColor="@color/colorBottomNavigationInactive"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/chart_summary_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chart_header"
            android:orientation="horizontal"
            android:minHeight="120dp"
            android:layout_alignParentStart="true">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart1"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_margin="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart2"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_margin="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart3"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_margin="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart4"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_margin="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/chart_icons_wrapper"
            android:layout_below="@+id/chart_summary_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v4.widget.CircleImageView
                android:id="@+id/kills_indicator"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:src="@drawable/jg"
                android:layout_width="12dp"
                android:layout_height="12dp" />
            <android.support.v4.widget.CircleImageView
                android:id="@+id/deaths_indicator"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:src="@drawable/jg"
                android:layout_width="12dp"
                android:layout_height="12dp" />
            <android.support.v4.widget.CircleImageView
                android:id="@+id/cs_indicator"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:src="@drawable/jg"
                android:layout_width="12dp"
                android:layout_height="12dp" />
            <android.support.v4.widget.CircleImageView
                android:id="@+id/damage_indicator"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:src="@drawable/jg"
                android:layout_width="12dp"
                android:layout_height="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/more_button"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:text="VIEW MORE..."
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_below="@+id/chart_icons_wrapper"
            android:layout_alignParentRight="true"
            android:layout_margin="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</android.support.v7.widget.CardView>