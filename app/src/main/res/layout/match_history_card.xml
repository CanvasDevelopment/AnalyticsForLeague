<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="12dp"
    android:background="@color/white"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/chart_summary_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chart_header"
            android:orientation="horizontal"
            android:minHeight="220dp"
            android:layout_alignParentStart="true">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="12dp"
                    android:layout_height="match_parent"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart2"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="12dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart3"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_margin="12dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chart_icons_wrapper"
            android:layout_below="@+id/chart_summary_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/kills_indicator"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:text="Kills"
                android:gravity="center"
                android:layout_width="12dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/deaths"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Deaths"
                android:layout_width="12dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/cs_indicator"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:layout_width="12dp"
                android:gravity="center"
                android:text="CS"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/chart_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BF9BDE"
            android:layout_margin="-3dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/good_or_bad_state_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/khasquare" />

            <TextView
                android:id="@+id/champ_name"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignTop="@+id/good_or_bad_state_icon"
                android:layout_alignBottom="@+id/good_or_bad_state_icon"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/good_or_bad_state_icon"
                android:gravity="center"

                android:text="Master Yi"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/enemy_champ_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="32dp"
                android:layout_marginRight="24dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="32dp"
                android:src="@drawable/shyvanasquare" />

            <TextView
                android:id="@+id/kda"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_toLeftOf="@+id/enemy_champ_icon"
                android:layout_alignTop="@+id/good_or_bad_state_icon"
                android:layout_alignBottom="@+id/enemy_champ_icon"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:text="Shyvana"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>